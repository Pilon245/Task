#include <iostream>

using namespace std;

int main()
{
   int k,s,j;
   cout<<"Введите сколько кубиков у Запира:"<<endl;
   cin>>k;
   for(s=1;s<k;s=s+1){
       k-=s;
   }
   cout<<"У Запира на последней ступенки:"<<s;
    return 0;
}

