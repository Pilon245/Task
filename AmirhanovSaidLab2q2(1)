#include <iostream>

using namespace std;

int main()
{
 std::cout<<"Ведите кол-во чисел последовательности?"<<endl;
 int k;
 int a;
 int *i = new int;

	
	int otv=0;
	std::cin>>a;

	
	for(k=0;k<a;k++){
		std::cin>>i[k];
		otv=otv+i[k];
	
	}
   int sum=otv/a;
   std::cout<<"Ответ= ";
   std::cout<<sum;       
    return 0;
}


